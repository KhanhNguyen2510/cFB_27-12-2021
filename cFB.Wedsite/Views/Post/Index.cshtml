    <script>
        baseUrl = '@SystemContants.MainConectionAPI';
        /*baseUrl = 'http://117.2.159.103:8012';*/
        var listPostID = []; //list postID for delete button and export excel
        var AddposId = [];
        var AddposIdne = [];

        function deleteItemInArray(arr, item) {
            for (var i = 0; i < arr.length; i++) {
                if (arr[i] === item) {
                    arr.splice(i, 1);
                    i--;
                }
            }
        };

        function toggleButton() {
            if (checkEmptyArray()) {
                $('#delete-post').prop('disabled', true);
                //$('#excel-export').prop('disabled', true);
            } else {
                $('#delete-post').prop('disabled', false);
                //$('#excel-export').prop('disabled', false);
            }

        };
        $('#select-all').click(function (e) {
            var table = $(e.target).closest('table');
            $('td input:checkbox', table).prop('checked', this.checked);
            $('td input:checkbox', table).each(function () {
                if (this.checked) {
                    listPostID.push($(this).attr('id'));
                }
                else {
                    deleteItemInArray(listPostID, $(this).attr('id'));
                }
            });
            toggleButton();
            //console.log(listPostID);
        });

        function addPostIDToArray(postID) {
            if ($('#' + postID).is(':checked')) {
                listPostID.push(postID);
            } else {
                deleteItemInArray(listPostID, postID);
            }
            toggleButton();
        }

        function checkEmptyArray() {
            if (listPostID.length == 0) {
                return true;
            }
            return false;
        }

        async function ChangeSenmalLable(ten) {
            hihi = baseUrl + '/api/Posts/ChangeSentimentLabelById/' + AddposIdne + '/' + ten
            console.log(hihi)
            await $.ajax({
                url: baseUrl + '/api/Posts/ChangeSentimentLabelById/' + AddposIdne + '/' + ten,
                type: 'POST',
                dataType: 'json',
                success: function (data) {
                    document.getElementById('msg').innerHTML =
                        `
                                        <button id="msgAlert" class="btn btn-primary btn-sm mb-2" style="background-color: #2dce89; " type="button" disabled>
                                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                            Đổi trang thái thành công !
                                        </button>
                                    `;
                    setTimeout(function () { location.reload(); }, 500);
                },
                error: function () {
                    console.log('Connect failled');
                },
            });
            location.reload();
        }


        async function deletePost() {
            $('#delete-post').prop('disabled', true);
            $('#fa-trash').hide();
            $('#loader').show();
            for (var i = 0; i < listPostID.length; i++) {
                await $.ajax({
                    //url: 'https://localhost:44347/api/Home/RemovePost/',
                    url: baseUrl + '/api/Posts/DeletePostId/' + listPostID[i] + '/',
                    type: 'POST',
                    dataType: 'json',
                    success: function (data) {
                        document.getElementById('msg').innerHTML =
                            `
                                        <button id="msgAlert" class="btn btn-primary btn-sm mb-2" style="background-color: #f5365c; " type="button" disabled>
                                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                            Xóa dõi thành công !
                                        </button>
                                    `;
                        setTimeout(function () { location.reload(); }, 500);

                    },
                    error: function () {
                        console.log('Connect failled');
                    },
                });
            }
            $('#loader').hide();
            $('#fa-trash').show();
            location.reload();
        }

        async function Report() {
            await $.ajax({
                url: baseUrl + '/api/Posts/Reported/' + AddposId + '/',
                type: 'POST',
                dataType: 'json',
                success: function (data) {
                    document.getElementById('msg').innerHTML =
                        `
                                        <button id="msgAlert" class="btn btn-primary btn-sm mb-2" style="background-color: #f5365c; " type="button" disabled>
