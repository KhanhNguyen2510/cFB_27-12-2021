                            'color': 'red'
                        })
                        $('#news-label').css({
                            'font-size': '20px',
                            'color': 'red'
                        })
                    } else if (data.sentimentLabelID == 'POS') {
                        $('#sentiment-label').html(data.sentimentLabelName).addClass('label-success');
                        $('#reprot-post').hide();
                        $('#title-h4').css({
                            'margin-left': '340px',
                            'font-size': '28px',
                            'font-weight': 'bold'
                        })
                        $('#sentiment-label').css({
                            'font-size': '20px',
                            'color': '#1E90FF'
                        })
                        $('#news-label').css({
