@using cFB.ViewModels.Common;
@using cFB.Data.Enums;
@model PagedResult<cFB.ViewModels.Catalog.Posts.GetPostViewModel>;
@using cFB.Utilities.Constants;
@{ ViewData["Title"] = "Index"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<main>
    @*Icons*@
    <link href="/assets/vendor/nucleo/css/nucleo.min.css" rel="stylesheet"> @*Argon CSS*@
    <link type="text/css" href="/assets/css/argon.min.css" rel="stylesheet">
    <div class="container-fluid px-4">
        <h1 class="mt-4">Danh sách bài viết thu thập được</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active ">Quản lý thông tin</li>
            <li class="breadcrumb-item">Danh sách bài viết</li>
        </ol>
        <div class="col" style="margin-left: -40px;position: fixed;z-index: 1;">
            <form method="get" asp-controller="Post" asp-action="Index">

                <div class="dropdown">
                    <button class="boderHit label-primary" data-target="#change-SL" data-bs-toggle="dropdown" aria-expanded="false" style="border-radius: 0px 54% 236% 0px; background-color: #DCDCDC; border:none; opacity:0.7">
                        <i class="fas fa-filter" style="font-size: 30px; color: #5e72e4; margin: 11px 10px 11px 0px;"></i>
                    </button>
                    <ul id="change-SL" class="dropdown-menu dropdown-menu-right px-2 py-3 ms-n4" aria-labelledby="dropdownMenuButton" style="padding-left:20px">
                        <li style="padding-bottom: 13px; text-align: center; justify-content: center; font-size: 21px;"><strong>Lọc thông tin mong muốn</strong> </li>
                        <li style="width: 430px; margin-left: -3px; display: flex; justify-content: space-between; ">
                            <div class="label-label">
                                @if (@ViewBag.RoleOfUser == ShareContants.UserAdmin)
                                {
                                    <label style="padding-right:5px">
                                        Đối tượng theo dõi
                                        <select name="userId" onchange="this.form.submit()" asp-items="@ViewBag.AdministrativeDivision" class="form-control input-sm" style="width:195px; height:46px">
                                            <option></option>
                                        </select>
                                        <i class="fas fa-caret-down" style=" position: absolute; margin: -30px 0 0 175px;"></i>
                                    </label>
                                }
                                <label style="padding-right:5px">
                                    Nhãn
                                    <select name="newsLabelID" onchange="this.form.submit()" asp-items="@ViewBag.NewsLabelID" class="form-control input-sm" style="width:157px; height:46px">
                                        <option></option>
                                    </select>
                                    <i class="fas fa-caret-down" style=" position: absolute; margin: -30px 0 0 138px;"></i>
                                </label>
                                <label style="padding-right:5px">
                                    &nbsp;
                                    Mức độ
                                    <select name="sentimentLabelID" onchange="this.form.submit()" asp-items="@ViewBag.SentimentLabelID" class="form-control input-sm" style="width:122px; height:46px">
                                        <option></option>
                                    </select>
                                    <i class="fas fa-caret-down" style=" position: absolute; margin: -31px 0 0 101px;"></i>
                                </label>
                                <label style="padding-right:5px">
                                    &nbsp;
                                    Trạng thái
                                    <select name="report" onchange="this.form.submit()" asp-items="@ViewBag.Report" class="form-control input-sm" style="width:122px; height:46px">
                                        <option></option>
                                    </select>
                                    <i class="fas fa-caret-down" style=" position: absolute; margin: -31px 0 0 101px;"></i>
                                </label>
                                <label style="padding-right:5px">
                                    &nbsp;
                                    Theo dõi đối tượng
                                    <select name="watchlistID" onchange="this.form.submit()" asp-items="@ViewBag.WatchList" class="form-control input-sm" style="width:280px; height:46px">
                                        <option></option>
                                    </select>
                                    <i class="fas fa-caret-down" style=" position: absolute; margin: -30px 0 0 252px;"></i>
                                </label>
                                <label style="padding-right:5px">
                                    &nbsp;
                                    Từ ngày đăng bài
                                    <input type="date" class="form-control input-sm" id="start-date" value="@ViewBag.StartDate" name="startDate" />
                                </label>
                                <label>
                                    &nbsp;
                                    Đến ngày đăng bài
                                    <input type="date" class="form-control input-sm" id="end-date" value="@ViewBag.EndDate" onchange="this.form.submit()" name="endDate" />
                                </label>
                                <label style="padding-left:5px">
                                    &nbsp;
                                    Ngày lấy thông tin
                                    <input type="date" class="form-control input-sm" id="cralw-date" value="@ViewBag.TimeCrawl" onchange="this.form.submit()" name="timeCrawl" />
                                </label>
                                <button type="button" onclick="window.location.href='/Post/Index'" class="btn btn-dark" style="height: 45px; margin: -1px 10px 0px 10px; background: #5e72e4; color:white;border:none; padding:10px ">Reset</button>
                            </div>
                        </li>
                    </ul>
                </div>
            </form>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-clipboard-list"></i> Danh mục tìm kiếm

                <div class="panel-heading" style="padding-top:20px">
                    <div class="row">
                        <div class="row">
                            <div class="col-2">
                                <form method="get" asp-controller="Post" asp-action="Index" style="text-align:left; display:flex;padding-top:5px">
                                    <p style="margin: 10px 5px 0 0px;">Số trang :</p>
                                    <input type="text" class="form-control border-0 ps-3" value="@ViewBag.PageSize" name="pageSize" placeholder="Nhập..." style="background: #eee9e9;  width: 60px; height: 45px; ">
                                    @*<button class="btn my-1 me-1" type="submit" style="height: 36px; width: 45px; padding: 0px; color: white; background-color: #5e72e4; border: none ">OK </button>*@
                                </form>
                            </div>
                            <div class="col-8">
                                <div class="bg-white border-radius-lg d-flex me-2" style="float:right">
                                    <form method="get" asp-controller="Post" asp-action="Index" style="text-align:left; display:flex; padding-top:5px">
                                        <p style="margin: 10px 7px 0 0;"></p>
                                        <input type="text" class="form-control border-0 ps-3" value="@ViewBag.Search" name="Search" placeholder="Nhập từ khóa cần tìm..." style="background: #eee9e9;  height: 45px; width: 250px;">
                                        <button class="btn" type="submit" style="height: 45px; width: 50px;  color: black; border: none; padding: 12px; margin-left: -3rem; "><i class="fas fa-search"></i></button>
                                    </form>
                                </div>
                            </div>
                            <div class="col">
                                <button id="delete-post" class="btn" onclick="deletePost()" style="font-size: 15px;" disabled="">
                                    <i class="fas fa-trash-alt" style=" font-size: 31px; color: #f5365c"></i>
                                    <div id="loader" class="loader" style="float: right; margin-top: 1px; margin-left: 2px; margin-right: 1.35px" hidden=""></div>
                                </button>
                            </div>
                            <div class="col-1">
                                <button id="excel-export" class="btn" data-toggle="modal" data-target="#view-post-excel" style="font-size:15px">
                                    @*Xuất excel&nbsp;*@
                                    <i class="fas fa-file-excel" style=" font-size: 31px; color: #2dce89"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <style>


                table tr {
                    counter-increment: Rownumber;
                }

                table td:first-child + td::before {
                    content: counter(Rownumber);
                    min-width: 1em;
                    margin-right: 0.5rem;
                }
            </style>
            <div class="table-responsive">
                <table class="table align-items-center mb-0" role="grid">
                    <thead>
                        <tr role="row">
                            <th aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 30px">
                                <input type="checkbox" name="select-all" id="select-all" class="checkbox" style="margin-bottom: 3px; cursor: pointer" />
                            </th>
                            <th style=" text-align: center;">STT</th>
                            <th style=" text-align: center;">Nội dung bài viết</th>
                            <th style=" text-align: center">Ngày đăng</th>
                            <th style=" text-align: center">Nơi thu thập</th>
                            <th style=" text-align: center">Nhãn</th>
                            <th style=" text-align: center">Mức độ</th>
                            <th style=" text-align: center">Xem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr role="row">
                                <td width="3%" style="text-align:center;">
                                    @if (@item.Report == Reported.UnReported)
                                    {
                                        <input type="checkbox" id="@item.PostID" name="SelectPost" class="checkbox" onchange="addPostIDToArray('@item.PostID')" style="margin-bottom: 3px; cursor: pointer" /> }
                                    else
                                    {
                                        <i class="fas fa-check" style="color:red"></i>}
                                </td>
                                <td width="5%" style=" text-align:center;">
                                </td>
                                <td width="25%" style="max-width: 100px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    <a>@item.PostContent</a>
                                </td>
                                <td style="width: 15%;text-align:center ">@item.UploadTime.ToString("dd/MM/yyyy") (<a style="color: #E00000">@item.UploadTime.ToString("HH:mm:ss")</a>)</td>
                                <td style="width: 15%; text-align:center;">
                                    <span><a href="@item.FacebookUrl" target="_blank">@item.FacebookName</a></span>
                                </td>
                                <td width="10%" style="text-align: center">@item.NewsLabelName</td>
                                @if (item.SentimentLabelID == "NEG")
                                {
                                    <td style="width: 10%; text-align: center; ">
                                        <span class="badge badge-dot me-4">
                                            <i class="bg-danger"></i>
                                            <span class="text-dark text-xs">@item.SentimentLabelName</span>
                                        </span>
                                    </td>
                                }
                                else if (item.SentimentLabelID == "POS")
                                {
                                    <td style="width: 10%; text-align: center; ">
                                        <span class="badge badge-dot me-4">
                                            <i class="bg-success"></i>
                                            <span class="text-dark text-xs">@item.SentimentLabelName</span>
                                        </span>
                                    </td>
                                }
                                else
                                {
                                    <td style="width: 10%; text-align: center; ">
                                        <span class="badge badge-dot me-4">
                                            <i class="bg-info"></i>
                                            <span class="text-dark text-xs">@item.SentimentLabelName</span>
                                        </span>
                                    </td>
                                }
                                <td width="5%" style="text-align: center; ">

                                    <button id="btn-view-post-detail" class="btn " data-toggle="modal" data-target="#view-post-detail" onclick="viewPostDetail('@item.PostID')">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="col-sm-6" style="margin:10px 0 0 0">
                    <strong>Tổng cộng: @Model.TotalRecords</strong>

                </div>

                @await Component.InvokeAsync("Pager", Model)
            </div>
        </div>
    </div>
