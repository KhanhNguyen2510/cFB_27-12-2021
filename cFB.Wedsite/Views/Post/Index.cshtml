                        $('#reprot-post').hide();
                        $('#title-h4').css({
                            'margin-left': '340px',
                            'font-size': '28px',
                            'font-weight': 'bold'
                        })
                        $('#sentiment-label').css({
                            'font-size': '20px',
                            'color': '#008000'
                        })
                        $('#news-label').css({
                            'font-size': '20px',
                            'color': '#008000'
                        })
                    }
                },
                error: function () {
                    alert('Lỗi kết nối đến server!');
                }
            });
        }

